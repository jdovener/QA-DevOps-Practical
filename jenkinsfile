pipeline{
        agent any
        environment {
            app_version = 'v1'
            rollback = 'true'
        }
        stages{
            stage('Run Tests'){
                steps{
                    sh "./test.sh"
                }
            }
            stage('Remove existing images'){
                steps{
                    sh "docker rmi -f $(sudo docker images -aq)"
                }
            }
            stage('Build Images'){
                steps{
                    sh "docker-compose build"
                }
            }
            stage('Deploy App'){
                steps{
                    sh "docker-compose up -d"
                }
            }
        }
}