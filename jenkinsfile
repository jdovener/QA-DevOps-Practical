pipeline{
        agent any
        environment {
            app_version = 'v1'
            rollback = 'true'
        }
        stages{
            stage('Run Tests'){
                steps{
                    sh "./test.sh"
                }
            }
            stage('Remove existing images'){
                steps{
                    // sh "docker rmi -rf \$(sudo docker images -aq)"
                    sh "docker image rm -f \$(sudo docker image ls --filter dangling=true -q)"
                    sh "docker image rm -f \$(sudo docker image ls -a -q)"
                }
            }
            stage('Build Images'){
                steps{
                    sh "docker-compose build"
                }
            }
            stage('Deploy App'){
                steps{
                    sh "docker-compose up -d"
                }
            }
        }
}